{
    "name": "caffeina-core/core",
    "type": "library",
    "description": "Platform for rapid application development.",
    "keywords": ["framework","core","sdk","platform"],
    "homepage": "http://caffeina.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Azzolini",
            "email": "stefano.azzolini@caffeina.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5",
        "phpunit/dbunit": ">=1.2",
        "phpunit/php-invoker": "*",
        "mybuilder/phpunit-accelerator": ">=1"
    },
    "scripts": {
    	"test" : "vendor/bin/phpunit --colors=always"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "classmap": [ "classes/" ]
    },
    "autoload-dev": {
        "classmap": [ "tests/" ]
    }
}
